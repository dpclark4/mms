<?xml version="1.0" encoding="utf-8"?>

<!-- Graphical Parameters -->
<pixels-per-meter>246</pixels-per-meter>
<frame-rate>60</frame-rate> <!-- Frames per second -->
<print-late-frames>false</print-late-frames>
<tile-base-color>BLACK</tile-base-color>
<tile-wall-color>RED</tile-wall-color>
<tile-corner-color>GRAY</tile-corner-color>
<mouse-body-color>BLUE</mouse-body-color>
<mouse-wheel-color>GREEN</mouse-wheel-color>
<mouse-sensor-color>WHITE</mouse-sensor-color>
<default-maze-visible>true</default-maze-visible>
<default-mouse-visible>true</default-mouse-visible>
<default-mouse-path-visible>true</default-mouse-path-visible> <!-- TODO: implement this -->
<default-wall-truth-visible>true</default-wall-truth-visible>
<default-tile-colors-visible>true</default-tile-colors-visible>
<!-- <shortest-path-visible>true</shortest-path-visible> TODO -->

<!-- Simulation Parameters -->
<random-seed>12345</random-seed> <!-- The seed value for rand() -->
<use-random-seed>false</use-random-seed> <!-- Whether or not to use the seed value -->
<crash-message>Oh no! Your mouse crashed! It can't move anymore...</crash-message>
<glut-init-time>0.25</glut-init-time> <!-- Seconds -->
<default-paused>false</default-paused>
<discrete-interface-sleep-time>10</discrete-interface-sleep-time> <!-- Milliseconds -->
<discrete-interface-min-speed>1</discrete-interface-min-speed> <!-- No units -->
<discrete-interface-max-speed>500</discrete-interface-max-speed> <!-- No units -->
<discrete-interface-default-speed>30</discrete-interface-default-speed> <!-- No units -->
<discrete-interface-declare-wall-on-read>true</discrete-interface-declare-wall-on-read>
<declare-both-wall-halves>true</declare-both-wall-halves>
<mouse-position-update-rate>1000</mouse-position-update-rate> <!-- Updates per second -->
<print-late-mouse-position-updates>true</print-late-mouse-position-updates>
<collision-detection-rate>40</collision-detection-rate> <!-- Checks per second -->
<print-late-collision-detections>true</print-late-collision-detections>
<print-late-sensor-reads>true</print-late-sensor-reads>
<number-of-circle-approximation-points>8</number-of-circle-approximation-points> <!-- The number of edges in a polygon for a circle -->
<number-of-sensor-edge-points>3</number-of-sensor-edge-points> <!-- The number of points of the edge of a sensor-->

<!-- Maze Parameters -->
<maze-directory>res/mazes/</maze-directory> <!-- realtive to project root -->
<maze-file>hitel02.maz</maze-file> <!-- relative to maze-directory -->
<use-maze-file>true</use-maze-file> <!-- whether or not to use the maze file above -->
<wall-length>.168</wall-length> <!-- meters -->
<wall-width>.012</wall-width> <!-- meters -->
<wall-height>.05</wall-height> <!-- meters -->
<!-- TODO: Rename "random-maze-..." to "generated-maze..." -->
<random-maze-width>16</random-maze-width> <!-- number of tiles -->
<random-maze-height>16</random-maze-height> <!-- number of tiles -->
<enforce-official-maze-rules>false</enforce-official-maze-rules>
<random-maze-algo>RANDOM</random-maze-algo>
<save-random-maze>true</save-random-maze> <!-- Whethor or not to save a random maze -->

